---
const {href, theme_title, auth1, title1, auth2, title2, auth3, title3} = Astro.props;
---

<style>
  .feature-card__card {
    background-color: var(--theme-surface-1);
    color: var(--theme-on-surface-1);
    border-radius: var(--theme-shape-radius);
  }
  .feature-card__link {
    display: block;
    text-decoration: none;
  }
  .featured-card__content {
    padding: 0.5rem 0.5rem 0.5rem 0.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow-y: hidden;
  }
  .feature-card__title {
    font-family: var(--theme-font-family-sans);
  }
</style>


<div class="feature-card__card">
  <a class="feature-card__link" href={href}>
    <div class="featured-card__content">
      <h3 class="feature-card__title">{theme_title}</h3>
      <ul>
      <li><em>{auth1}</em>: {title1}</li>
      <li><em>{auth2}</em>: {title2}</li>
      <li><em>{auth3}</em>: {title3}</li>
      </ul>
    </div>
  </a>
</div> 

